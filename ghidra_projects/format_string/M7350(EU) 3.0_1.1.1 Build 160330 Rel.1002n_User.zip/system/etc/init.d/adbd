# adbd        init.d script to start the Android debug bridge daemon

set -e

if [ -f /etc/default/adbd ]; then
        . /etc/default/adbd
fi

case "$1" in
  start)
        echo -n "Starting adbd: "
        start-stop-daemon -S -b -a /sbin/adbd

        if [ -e "/etc/adb_devid" ]
        then
                cat /etc/adb_devid > /sys/class/android_usb/f_accessory/device/iSerial
        else
                cat /proc/sys/kernel/random/boot_id | cut -d- -f5 > /sys/class/android_usb/f_accessory/device/iSerial
                cat /sys/class/android_usb/f_accessory/device/iSerial > /etc/adb_devid
        fi

        echo "done"
        ;;
  stop)
        echo -n "Stopping adbd: "
        start-stop-daemon -K -n adbd
        echo "done"
        ;;
  restart)
        $0 stop
        $0 start
        ;;
  *)
        echo "Usage adbd { start | stop | restart}" >&2
        exit 1
        ;;
esac

exit 0
